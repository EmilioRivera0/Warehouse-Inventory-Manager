@{
    ViewData["Title"] = "Withdraw Product";
}

<h1>Withdraw Product</h1>

<h4>@ViewData["Name"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WithdrawProduct">
            <div class="form-group">
                <label class="control-label">Current Stock: @ViewData["Stock"]</label>
            </div>
            <div class="form-group">
                <label class="control-label">Withdraw Amount</label>
                <input name="WithdrawAmount" class="form-control" />
                <p style="font-weight: bold; color: red">@ViewData["Error"]</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
