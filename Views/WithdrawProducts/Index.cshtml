@using Microsoft.AspNetCore.Identity
@inject SignInManager<WarehouseUser> SignInManager
@inject UserManager<WarehouseUser> UserManager

@model IEnumerable<Warehouse_Inventory_Manager.Models.Products>

@{
    ViewData["Title"] = "Withdraw Products";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-action="WithdrawProduct" asp-route-id="@item.Id">Withdraw Product</a>
            </td>
        </tr>
}
    </tbody>
</table>
